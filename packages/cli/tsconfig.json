{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "noEmit": false,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "types": ["node"]
  },
  "include": ["src/**/*", "bin/**/*"]
}